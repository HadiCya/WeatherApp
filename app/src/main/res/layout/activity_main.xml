<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="25dp"
    android:orientation="vertical"
    android:background="@color/purple_200">

    <RelativeLayout
        android:id="@+id/maincontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/addresscontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOCATION"
                android:textSize="30sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="updated at  "
                android:textSize="15sp"
                tools:ignore="HardcodedText" />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/overviewcontainer"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="70dp" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Clear Skies"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="32Â°C "
                android:textSize="90sp"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/feelslike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="feels like:  __"
                    tools:ignore="HardcodedText" >

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="400dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/sunrise_lay"
                    tools:ignore="UseCompoundDrawables">
                    <ImageView
                        android:id="@+id/humidimg"
                        android:layout_width="54dp"
                        android:layout_height="36dp"
                        android:src="@drawable/humidity_image"
                        android:background="#3CF1EBF1"
                        tools:ignore="ContentDescription">

                    </ImageView>

                    <TextView
                        android:id="@+id/humidity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Humidity"
                        android:textSize="20dp"
                        android:padding="5dp"
                        android:background="#3CF1EBF1"
                        tools:ignore="HardcodedText,SpUsage">

                    </TextView>

                </LinearLayout>



                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sunset_lay"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/pressureimg"
                        android:layout_width="54dp"
                        android:layout_height="36dp"
                        android:src="@drawable/air_pressure_image"
                        android:background="#3CF1EBF1"
                        tools:ignore="ContentDescription">

                    </ImageView>

                    <TextView
                        android:id="@+id/pressure"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Pressure"
                        android:textSize="20dp"
                        android:padding="5dp"
                        android:background="#3CF1EBF1"
                        tools:ignore="HardcodedText,SpUsage">

                    </TextView>


                </LinearLayout>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/wind_lay"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/windimg"
                        android:layout_width="54dp"
                        android:layout_height="36dp"
                        android:src="@drawable/wind_speed_image"
                        android:background="#3CF1EBF1"
                        tools:ignore="ContentDescription">

                    </ImageView>

                    <TextView
                        android:id="@+id/wind"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Wind"
                        android:textSize="20dp"
                        android:padding="5dp"
                        android:background="#3CF1EBF1"
                        tools:ignore="HardcodedText,SpUsage">

                    </TextView>

                </LinearLayout>


                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/pressure_lay"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="54dp"
                        android:layout_height="36dp"
                        android:src="@drawable/rain"
                        android:background="#3CF1EBF1"
                        tools:ignore="ContentDescription">

                    </ImageView>

                    <TextView
                        android:id="@+id/precipitation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Precipitation"
                        android:textSize="20dp"
                        android:padding="5dp"
                        android:background="#3CF1EBF1"
                        tools:ignore="HardcodedText,SpUsage">

                    </TextView>


                </LinearLayout>


                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/humid_lay"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="54dp"
                        android:layout_height="36dp"
                        android:src="@drawable/clouds"
                        android:background="#3CF1EBF1"
                        tools:ignore="ContentDescription">

                    </ImageView>

                    <TextView
                        android:id="@+id/cloudcast"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="cloudcast"
                        android:textSize="20dp"
                        android:padding="5dp"
                        android:background="#3CF1EBF1"
                        tools:ignore="HardcodedText,SpUsage">

                    </TextView>

                </LinearLayout>




            </LinearLayout>


        </LinearLayout>

